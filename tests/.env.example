# Firebase Test Configuration
# Copy this file to .env and update with your Firebase project details

# Firebase Project Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebaseio.com
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:web:abcdef123456789012
FIREBASE_MEASUREMENT_ID=G-ABCDEFGHIJ

# Test Configuration
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword123
TEST_FIRM_NAME=TestFirm
TEST_ADMIN_EMAIL=admin@testfirm.com
TEST_ADMIN_PASSWORD=adminpassword123

# Firebase Admin SDK (for Node.js tests)
# Path to your Firebase Admin SDK service account key JSON file
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=./path/to/serviceAccountKey.json

# Test Environment Settings
TEST_TIMEOUT=30000
TEST_RETRY_ATTEMPTS=3
TEST_CLEANUP_ENABLED=true

# Firebase Emulator Settings (optional)
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIREBASE_EMULATOR_HUB_HOST=localhost:4400

# Logging Configuration
TEST_LOG_LEVEL=info
TEST_VERBOSE_OUTPUT=false

# Security Test Settings
TEST_PERMISSION_SCENARIOS=true
TEST_CROSS_FIRM_ACCESS=true
TEST_UNAUTHORIZED_ACCESS=true

# Performance Test Settings
TEST_BATCH_SIZE=10
TEST_CONCURRENT_USERS=5
TEST_LOAD_TEST_ENABLED=false